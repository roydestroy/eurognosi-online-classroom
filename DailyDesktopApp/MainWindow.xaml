<Window x:Class="DailyDesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:wc="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="EUROGNOSI Online Classroom"
        Height="800"
        Width="1200"
        MinHeight="600"
        MinWidth="900"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="False"
        Background="Transparent"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <WindowChrome.WindowChrome>
        <wc:WindowChrome
            CaptionHeight="0"
            CornerRadius="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="8"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- Color palette -->
        <SolidColorBrush x:Key="TopBarBrush" Color="#121212"/>
        <SolidColorBrush x:Key="ControlBarBrush" Color="#121212"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#121212"/>
        <SolidColorBrush x:Key="CardBorderBrush" Color="#1E1E1E"/>

        <!-- Dark rounded ComboBox, global for all ComboBoxes -->
        <!-- Dark rounded ComboBox, global for all ComboBoxes -->
        <Style TargetType="ComboBox">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <!-- This is the only real background for the box -->
                        <Border x:Name="RootBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6">
                            <Grid>
                                <!-- CLICKABLE SURFACE -->
                                <ToggleButton
                            Name="ToggleButton"
                            Background="Transparent"
                            BorderThickness="0"
                            Focusable="False"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay,
                                                RelativeSource={RelativeSource TemplatedParent}}"
                            ClickMode="Press"
                            OverridesDefaultStyle="True">
                                    <!-- We completely override the ToggleButton template
                                 so it cannot draw its own blue background -->
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border Background="Transparent"
                                                Width="{TemplateBinding Width}"
                                                Height="{TemplateBinding Height}">
                                                <ContentPresenter
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"/>
                                            </Border>
                                        </ControlTemplate>
                                    </ToggleButton.Template>

                                    <!-- CONTENT: text + arrow -->
                                    <Grid Margin="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="24" />
                                        </Grid.ColumnDefinitions>

                                        <!-- SELECTED TEXT -->
                                        <TextBlock
                                    x:Name="PART_SelectedText"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Foreground="{TemplateBinding Foreground}"
                                    Text="{Binding SelectionBoxItem,
                                                   RelativeSource={RelativeSource TemplatedParent}}"
                                    TextTrimming="CharacterEllipsis"
                                    FontSize="13"/>

                                        <!-- ARROW -->
                                        <Path
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Data="M 0 0 L 4 4 L 8 0 Z"
                                    Fill="#E5E7EB"/>
                                    </Grid>
                                </ToggleButton>

                                <!-- DROPDOWN POPUP -->
                                <Popup
                            Name="Popup"
                            Placement="Bottom"
                            IsOpen="{TemplateBinding IsDropDownOpen}"
                            AllowsTransparency="True"
                            Focusable="False"
                            PopupAnimation="Slide">
                                    <Border Background="#1E1E1E"
                                    BorderBrush="#2A2A2A"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="2"
                                    MinWidth="{Binding ActualWidth,
                                                      RelativeSource={RelativeSource AncestorType=ComboBox}}">
                                        <ScrollViewer>
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RootBorder"
                                Property="Background"
                                Value="#202020"/>
                            </Trigger>

                            <!-- Open (pressed) -->
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="RootBorder"
                                Property="Background"
                                Value="#252525"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="RootBorder"
                                Property="Opacity"
                                Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="ItemBorder"
                        Background="{TemplateBinding Background}"
                        CornerRadius="6">
                            <!-- Same 2-column layout as the header -->
                            <Grid Margin="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="24"/>
                                </Grid.ColumnDefinitions>

                                <!-- Item text in the left column, centered -->
                                <ContentPresenter
                            Grid.Column="0"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            Margin="0"
                            RecognizesAccessKey="True"/>
                                <!-- Right column is just empty, it matches the arrow space -->
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder"
                                Property="Background"
                                Value="#202020"/>
                            </Trigger>

                            <!-- Selected -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder"
                                Property="Background"
                                Value="#252525"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon button (Home, Reload) -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="Transparent"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E1E1E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1A1A1A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Standard window buttons (minimize / maximize) -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!-- FULL clickable square, always 48x32 -->
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}"
                        CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                Property="Background"
                                Value="#1E1E1E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                Property="Background"
                                Value="#1A1A1A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border"
                                Property="Opacity"
                                Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close button -->
        <Style x:Key="CloseButtonStyle"
       TargetType="Button"
       BasedOn="{StaticResource WindowButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}"
                        CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                Property="Background"
                                Value="#DC2626"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                Property="Background"
                                Value="#B91C1C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border"
                                Property="Opacity"
                                Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Primary (Connect) -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#004497"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="#004497" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#9cbf49"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#7A993A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#4B5563"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary (Reconnect) -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#004497"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

    </Window.Resources>

    <Border Background="#121212">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="44"/>
                <!-- Title bar -->
                <RowDefinition Height="64"/>
                <!-- Controls -->
                <RowDefinition Height="*"/>
                <!-- WebView -->
                <RowDefinition Height="32"/>
                <!-- Status bar -->
            </Grid.RowDefinitions>

            <!-- TITLE BAR -->
            <Border Grid.Row="0"
                    Background="#121212"
                    Padding="12,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- DRAG AREA: covers columns 0 + 1, but NOT the buttons -->
                    <Border Grid.Column="0"
                Grid.ColumnSpan="2"
                Background="Transparent"
                MouseDown="TitleBar_MouseDown"/>

                    <!-- Logo + Title -->
                    <StackPanel Grid.Column="0"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
                        <Image Source="pack://application:,,,/Assets/EurognosiStar.png"
                   Width="26"
                   Height="26"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="ΕΥΡΩΓΝΩΣΗ™ Online Classroom"
                       FontSize="16"
                       Foreground="#E5E7EB"
                       FontWeight="SemiBold"
                       Margin="8,0,0,0"
                       VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- (optional) Spacer in column 1 if you use it -->

                    <!-- Window Buttons (NON-draggable area) -->
                    <StackPanel Grid.Column="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
                        <Button Style="{StaticResource WindowButtonStyle}"
                    Click="MinButton_Click">
                            <TextBlock Text="&#xE921;"/>
                        </Button>

                        <Button x:Name="MaxRestoreButton"
                    Style="{StaticResource WindowButtonStyle}"
                    Click="MaxRestoreButton_Click">
                            <TextBlock x:Name="MaxRestoreIcon" Text="&#xE922;"/>
                        </Button>

                        <Button Style="{StaticResource CloseButtonStyle}"
                    Click="CloseButton_Click">
                            <TextBlock Text="&#xE8BB;"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>


            <!-- CONTROL BAR -->
            <Border Grid.Row="1"
                    Background="{StaticResource ControlBarBrush}"
                    BorderBrush="#1E1E1E"
                    BorderThickness="0,0,0,1">
                <Grid Margin="16,8">
                    <!-- Two rows: labels row & controls row -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- labels -->
                        <RowDefinition Height="Auto"/>
                        <!-- controls -->
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <!-- school -->
                        <ColumnDefinition Width="*"/>
                        <!-- teacher -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- buttons -->
                    </Grid.ColumnDefinitions>

                    <!-- Row 0: labels -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="School"
                               FontSize="11"
                               Foreground="#9CA3AF"
                               Margin="0,0,12,2"/>

                    <TextBlock Grid.Row="0" Grid.Column="1"
                               Text="Teacher"
                               FontSize="11"
                               Foreground="#9CA3AF"
                               Margin="0,0,12,2"/>

                    <!-- Row 1: controls -->

                    <ComboBox Grid.Row="1" Grid.Column="0"
                              x:Name="VenueComboBox"
                              Margin="0,0,12,0"
                              SelectionChanged="VenueComboBox_SelectionChanged"/>

                    <ComboBox Grid.Row="1" Grid.Column="1"
                              x:Name="TeacherComboBox"
                              Margin="0,0,12,0"
                              IsEnabled="False"/>


                    <!-- Buttons -->
                    <StackPanel Grid.Row="1" Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <Button x:Name="ConnectButton"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Width="100"
                                Height="28"
                                Click="ConnectButton_Click"
                                Margin="0,0,8,0">
                            Connect
                        </Button>

                        <Button x:Name="ReconnectButton"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Width="100"
                                Height="28"
                                Click="ReconnectButton_Click"
                                Margin="0,0,8,0"
                                IsEnabled="False">
                            Reconnect
                        </Button>

                        <!-- Home -->
                        <Button x:Name="HomeButton"
                                Style="{StaticResource IconButtonStyle}"
                                Width="32"
                                Height="28"
                                Click="HomeButton_Click"
                                ToolTip="Clear selection"
                                Margin="0,0,6,0">
                            <TextBlock Text="&#xE80F;"/>
                        </Button>

                        <!-- Reload -->
                        <Button x:Name="ReloadButton"
                                Style="{StaticResource IconButtonStyle}"
                                Width="32"
                                Height="28"
                                Click="ReloadButton_Click"
                                ToolTip="Reload current classroom">
                            <TextBlock Text="&#xE72C;"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- MAIN CONTENT -->
            <Grid Grid.Row="2" Margin="16,12,16,12">
                <Border Background="{StaticResource CardBackgroundBrush}"
                        BorderBrush="{StaticResource CardBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="0"
                        SnapsToDevicePixels="True">
                    <Grid ClipToBounds="True">
                        <!-- Empty state with EUROGNOSI logo -->
                        <Grid x:Name="EmptyStateGrid"
          Background="#121212"
          Visibility="Visible">
                            <Image Source="pack://application:,,,/Assets/EurognosiStar.png"
               Width="160"
               Opacity="0.10"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               IsHitTestVisible="False"/>
                        </Grid>

                        <!-- WebView2 (hidden until a room is loaded) -->
                        <wv2:WebView2 x:Name="DailyWebView"
                  Source="about:blank"
                  Visibility="Collapsed"/>

                        <!-- Loading overlay (kept on top for when WebView is visible) -->
                        <Grid x:Name="LoadingOverlay"
          Background="#121212"
          Visibility="Collapsed">
                            <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                                <TextBlock Text="Preparing your classroom…"
                       Foreground="#E5E7EB"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,0,0,12"
                       HorizontalAlignment="Center"/>
                                <ProgressBar IsIndeterminate="True"
                         Width="220"
                         Height="6"/>
                            </StackPanel>
                        </Grid>
                    </Grid>

                </Border>
            </Grid>

            <!-- STATUS BAR -->
            <Border Grid.Row="3"
                    Background="#121212"
                    BorderBrush="#1E1E1E"
                    BorderThickness="0,1,0,0">
                <Grid Margin="12,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Width="8"
                             Height="8"
                             Fill="#22C55E"
                             VerticalAlignment="Center"
                             Margin="0,0,6,0"/>

                    <TextBlock x:Name="StatusText"
                               Grid.Column="1"
                               Foreground="#9CA3AF"
                               VerticalAlignment="Center"
                               FontSize="11"
                               Text="Select a school and teacher."/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
