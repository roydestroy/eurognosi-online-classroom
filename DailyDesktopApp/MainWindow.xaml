<Window x:Class="DailyDesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="EUROGNOSI™ Online Classroom"
        Height="800"
        Width="1200"
        MinHeight="600"
        MinWidth="900"
        Background="{DynamicResource AppBackgroundBrush}"
        WindowStyle="None"
        ResizeMode="CanResize"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        Icon="Assets/AppIcon.ico">

    <Window.Resources>
        <!-- Theme-able brushes -->
        <SolidColorBrush x:Key="AppBackgroundBrush" Color="#020617"/>
        <SolidColorBrush x:Key="TopBarBrush" Color="#020617"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#020617"/>
        <SolidColorBrush x:Key="CardBorderBrush" Color="#1E293B"/>
        <SolidColorBrush x:Key="StatusBarBrush" Color="#020617"/>

        <!-- Theme-able text/icon brushes -->
        <SolidColorBrush x:Key="TopBarTextBrush" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="StatusTextBrush" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="IconForegroundBrush" Color="#E5E7EB"/>

        <!-- Theme-able hover/pressed backgrounds for icon buttons -->
        <SolidColorBrush x:Key="IconHoverBackgroundBrush" Color="#111827"/>
        <SolidColorBrush x:Key="IconPressedBackgroundBrush" Color="#0F172A"/>

        <!-- Icon button style -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{DynamicResource IconForegroundBrush}"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="ToolTipService.ShowOnDisabled" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                    Property="Background"
                                    Value="{DynamicResource IconHoverBackgroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                    Property="Background"
                                    Value="{DynamicResource IconPressedBackgroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#6B7280"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="40"
                            ResizeBorderThickness="8"
                            CornerRadius="8"
                            GlassFrameThickness="0" />
    </shell:WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <!-- Top bar -->
            <RowDefinition Height="*"/>
            <!-- Main content -->
            <RowDefinition Height="32"/>
            <!-- Status bar -->
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <Border x:Name="TopBarBorder"
        Grid.Row="0"
        Background="{DynamicResource TopBarBrush}"
        BorderBrush="#0F172A"
        BorderThickness="0,0,0,1">
            <Grid Margin="12,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- logo + title -->
                    <ColumnDefinition Width="*"/>
                    <!-- centered actions -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- window controls -->
                </Grid.ColumnDefinitions>

                <!-- Logo + title -->
                <StackPanel Grid.Column="0"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
                    <Image Source="pack://application:,,,/Assets/EurognosiStar.png"
                   Width="28"
                   Height="28"
                   Margin="0,0,8,0"
                   Stretch="UniformToFill"
                   SnapsToDevicePixels="True"
                   RenderOptions.BitmapScalingMode="HighQuality" />
                    <TextBlock x:Name="TitleText"
                       Text="EUROGNOSI™ Online Classroom"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TopBarTextBrush}"
                       VerticalAlignment="Center" />
                </StackPanel>

                <!-- Centered action buttons (same size) -->
                <StackPanel Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0">
                    <!-- Language -->
                    <Button x:Name="LanguageToggleButton"
                            Width="32" Height="32"
                            Style="{StaticResource IconButtonStyle}"
                            Click="LanguageToggleButton_Click"
                            ToolTip="Switch language"
                            Margin="0,0,6,0"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <TextBlock x:Name="LanguageToggleLabel"
                           Text="EN"
                           FontFamily="Segoe UI"
                           FontSize="12"
                           FontWeight="SemiBold" />
                    </Button>

                    <!-- Theme -->
                    <Button x:Name="ThemeToggleButton"
                            Width="32" Height="32"
                            Style="{StaticResource IconButtonStyle}"
                            Click="ThemeToggleButton_Click"
                            ToolTip="Toggle light / dark mode"
                            Margin="0,0,6,0"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <TextBlock x:Name="ThemeToggleIcon"
                           Text="&#xE706;"/>
                    </Button>

                    <!-- Home -->
                    <Button x:Name="HomeButton"
                            Width="32" Height="32"
                            Style="{StaticResource IconButtonStyle}"
                            Click="HomeButton_Click"
                            ToolTip="Go to classroom selector"
                            Margin="0,0,6,0"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <TextBlock Text="&#xE80F;"/>
                    </Button>

                    <!-- Reload -->
                    <Button x:Name="ReloadButton"
                            Width="32" Height="32"
                            Style="{StaticResource IconButtonStyle}"
                            Click="ReloadButton_Click"
                            ToolTip="Reload current page"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <TextBlock Text="&#xE72C;"/>
                    </Button>
                </StackPanel>

                <!-- Window controls (right side, spaced out) -->
                <StackPanel Grid.Column="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">

                    <!-- Minimize -->
                    <Button x:Name="MinButton"
                            Style="{StaticResource IconButtonStyle}"
                            Width="28" Height="24"
                            Margin="0,0,6,0"
                            Click="MinButton_Click"
                            ToolTip="Minimize"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <TextBlock Text="&#xE921;" FontSize="12"/>
                    </Button>

                    <!-- Maximize / Restore -->
                    <Button x:Name="MaxButton"
                            Style="{StaticResource IconButtonStyle}"
                            Width="28" Height="24"
                            Margin="0,0,6,0"
                            Click="MaxButton_Click"
                            ToolTip="Maximize"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <TextBlock x:Name="MaxButtonIcon" Text="&#xE922;" FontSize="12"/>
                    </Button>

                    <!-- Close -->
                    <Button x:Name="CloseButton"
                            Style="{StaticResource IconButtonStyle}"
                            Width="28" Height="24"
                            Click="CloseButton_Click"
                            ToolTip="Close"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <TextBlock Text="&#xE8BB;" FontSize="12"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>


        <!-- MAIN CONTENT -->
        <Grid x:Name="MainContentGrid" Grid.Row="1" Margin="16">
            <!-- Outer card with nice rounded border -->
            <Border Background="{DynamicResource CardBackgroundBrush}"
                    BorderBrush="{DynamicResource CardBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="4"
                    SnapsToDevicePixels="True">
                <!-- Inner border actually clips the WebView contents -->
                <Border Background="{DynamicResource CardBackgroundBrush}"
                        CornerRadius="10"
                        SnapsToDevicePixels="True"
                        ClipToBounds="True">
                    <Grid>
                        <wv2:WebView2 x:Name="DailyWebView"
                              Source="about:blank"/>

                        <Grid x:Name="LoadingOverlay"
                      Background="{DynamicResource CardBackgroundBrush}"
                      Opacity="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Width="480"
                            Height="260"
                            CornerRadius="16"
                            Background="#0F172A"
                            Opacity="0.95"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                                <StackPanel Margin="32">
                                    <Rectangle Height="16"
                                       Width="320"
                                       RadiusX="4"
                                       RadiusY="4"
                                       Fill="#111827"
                                       Margin="0,0,0,8"/>
                                    <Rectangle Height="16"
                                       Width="260"
                                       RadiusX="4"
                                       RadiusY="4"
                                       Fill="#111827"
                                       Margin="0,0,0,24"/>
                                    <TextBlock Text="Preparing your classroom..."
                                       Foreground="#9CA3AF"
                                       FontSize="13"
                                       Margin="0,0,0,8" TextAlignment="Center"/>
                                    <ProgressBar Height="4"
                                         Width="220"
                                         IsIndeterminate="True"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </Border>
        </Grid>

        <!-- STATUS BAR -->
        <Border x:Name="StatusBarBorder"
                Grid.Row="2"
                Background="{DynamicResource StatusBarBrush}"
                BorderBrush="#0F172A"
                BorderThickness="0,1,0,0">
            <Grid Margin="12,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Ellipse Width="8"
                         Height="8"
                         VerticalAlignment="Center"
                         Fill="#22C55E"
                         Margin="0,0,6,0"/>

                <TextBlock x:Name="StatusText"
                           Grid.Column="1"
                           VerticalAlignment="Center"
                           FontSize="11"
                           Foreground="{DynamicResource StatusTextBrush}"
                           Text="Initializing…"/>

            </Grid>
        </Border>
    </Grid>
</Window>
