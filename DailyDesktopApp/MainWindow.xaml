<Window x:Class="DailyDesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:wc="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="EUROGNOSI Online Classroom"
        Height="800"
        Width="1200"
        MinHeight="600"
        MinWidth="900"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="False"
        Background="Transparent"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <!-- WindowChrome MUST be a direct child of Window -->
    <WindowChrome.WindowChrome>
        <wc:WindowChrome
            CaptionHeight="0"
            CornerRadius="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="8"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- Color palette -->
        <SolidColorBrush x:Key="TopBarBrush" Color="#020617"/>
        <SolidColorBrush x:Key="ControlBarBrush" Color="#020617"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#020617"/>
        <SolidColorBrush x:Key="CardBorderBrush" Color="#1E293B"/>

        <!-- Center text vertically in all ComboBoxes -->
        <Style TargetType="ComboBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Icon button (Home, Reload) -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="Transparent"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#111827"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0F172A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Standard window buttons (minimize / maximize) -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!-- FULL clickable square, always 48x32 -->
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}"
                        CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                Property="Background"
                                Value="#111827"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                Property="Background"
                                Value="#0F172A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border"
                                Property="Opacity"
                                Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close button -->
        <Style x:Key="CloseButtonStyle"
       TargetType="Button"
       BasedOn="{StaticResource WindowButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}"
                        CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                Property="Background"
                                Value="#DC2626"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                Property="Background"
                                Value="#B91C1C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border"
                                Property="Opacity"
                                Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Primary (Connect) -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="#2563EB" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E40AF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#4B5563"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary (Reconnect) -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#111827"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
        </Style>

    </Window.Resources>

    <Border Background="#020617">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="44"/>
                <!-- Title bar -->
                <RowDefinition Height="64"/>
                <!-- Controls -->
                <RowDefinition Height="*"/>
                <!-- WebView -->
                <RowDefinition Height="32"/>
                <!-- Status bar -->
            </Grid.RowDefinitions>

            <!-- TITLE BAR -->
            <Border Grid.Row="0"
                    Background="#020617"
                    Padding="12,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- DRAG AREA: covers columns 0 + 1, but NOT the buttons -->
                    <Border Grid.Column="0"
                Grid.ColumnSpan="2"
                Background="Transparent"
                MouseDown="TitleBar_MouseDown"/>

                    <!-- Logo + Title -->
                    <StackPanel Grid.Column="0"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
                        <Image Source="pack://application:,,,/Assets/EurognosiStar.png"
                   Width="26"
                   Height="26"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="ΕΥΡΩΓΝΩΣΗ™ Online Classroom"
                       FontSize="16"
                       Foreground="#E5E7EB"
                       FontWeight="SemiBold"
                       Margin="8,0,0,0"
                       VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- (optional) Spacer in column 1 if you use it -->

                    <!-- Window Buttons (NON-draggable area) -->
                    <StackPanel Grid.Column="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
                        <Button Style="{StaticResource WindowButtonStyle}"
                    Click="MinButton_Click">
                            <TextBlock Text="&#xE921;"/>
                        </Button>

                        <Button x:Name="MaxRestoreButton"
                    Style="{StaticResource WindowButtonStyle}"
                    Click="MaxRestoreButton_Click">
                            <TextBlock x:Name="MaxRestoreIcon" Text="&#xE922;"/>
                        </Button>

                        <Button Style="{StaticResource CloseButtonStyle}"
                    Click="CloseButton_Click">
                            <TextBlock Text="&#xE8BB;"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>


            <!-- CONTROL BAR -->
            <Border Grid.Row="1"
                    Background="{StaticResource ControlBarBrush}"
                    BorderBrush="#0F172A"
                    BorderThickness="0,0,0,1">
                <Grid Margin="16,8">
                    <!-- Two rows: labels row & controls row -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- labels -->
                        <RowDefinition Height="Auto"/>
                        <!-- controls -->
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <!-- school -->
                        <ColumnDefinition Width="*"/>
                        <!-- teacher -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- buttons -->
                    </Grid.ColumnDefinitions>

                    <!-- Row 0: labels -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="School"
                               FontSize="11"
                               Foreground="#9CA3AF"
                               Margin="0,0,12,2"/>

                    <TextBlock Grid.Row="0" Grid.Column="1"
                               Text="Teacher"
                               FontSize="11"
                               Foreground="#9CA3AF"
                               Margin="0,0,12,2"/>

                    <!-- Row 1: controls -->

                    <!-- School combo -->
                    <ComboBox Grid.Row="1" Grid.Column="0"
                              x:Name="VenueComboBox"
                              Height="28"
                              Background="#F9FAFB"
                              Foreground="#111827"
                              BorderBrush="#374151"
                              BorderThickness="1"
                              Padding="4,2"
                              VerticalContentAlignment="Center"
                              Margin="0,0,12,0"
                              SelectionChanged="VenueComboBox_SelectionChanged"/>

                    <!-- Teacher combo -->
                    <ComboBox Grid.Row="1" Grid.Column="1"
                              x:Name="TeacherComboBox"
                              Height="28"
                              Background="#F9FAFB"
                              Foreground="#111827"
                              BorderBrush="#374151"
                              BorderThickness="1"
                              Padding="4,2"
                              VerticalContentAlignment="Center"
                              IsEnabled="False"
                              Margin="0,0,12,0"/>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="1" Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <Button x:Name="ConnectButton"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Width="100"
                                Height="28"
                                Click="ConnectButton_Click"
                                Margin="0,0,8,0">
                            Connect
                        </Button>

                        <Button x:Name="ReconnectButton"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Width="100"
                                Height="28"
                                Click="ReconnectButton_Click"
                                Margin="0,0,8,0"
                                IsEnabled="False">
                            Reconnect
                        </Button>

                        <!-- Home -->
                        <Button x:Name="HomeButton"
                                Style="{StaticResource IconButtonStyle}"
                                Width="32"
                                Height="28"
                                Click="HomeButton_Click"
                                ToolTip="Clear selection"
                                Margin="0,0,6,0">
                            <TextBlock Text="&#xE80F;"/>
                        </Button>

                        <!-- Reload -->
                        <Button x:Name="ReloadButton"
                                Style="{StaticResource IconButtonStyle}"
                                Width="32"
                                Height="28"
                                Click="ReloadButton_Click"
                                ToolTip="Reload current classroom">
                            <TextBlock Text="&#xE72C;"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- MAIN CONTENT -->
            <Grid Grid.Row="2" Margin="16,12,16,12">
                <Border Background="{StaticResource CardBackgroundBrush}"
                        BorderBrush="{StaticResource CardBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="0"
                        SnapsToDevicePixels="True">
                    <Grid ClipToBounds="True">
                        <wv2:WebView2 x:Name="DailyWebView" Source="about:blank"/>

                        <!-- Loading overlay -->
                        <Grid x:Name="LoadingOverlay"
                              Background="#CC020617"
                              Visibility="Collapsed">
                            <StackPanel HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                <TextBlock Text="Preparing your classroom…"
                                           Foreground="#E5E7EB"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,12"
                                           HorizontalAlignment="Center"/>
                                <ProgressBar IsIndeterminate="True"
                                             Width="220"
                                             Height="6"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <!-- STATUS BAR -->
            <Border Grid.Row="3"
                    Background="#020617"
                    BorderBrush="#0F172A"
                    BorderThickness="0,1,0,0">
                <Grid Margin="12,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Ellipse Width="8"
                             Height="8"
                             Fill="#22C55E"
                             VerticalAlignment="Center"
                             Margin="0,0,6,0"/>

                    <TextBlock x:Name="StatusText"
                               Grid.Column="1"
                               Foreground="#9CA3AF"
                               VerticalAlignment="Center"
                               FontSize="11"
                               Text="Select a school and teacher."/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
