<Window x:Class="DailyDesktopApp.HandRaiseOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="110"
        Width="340"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True">
    <Border CornerRadius="12"
            Background="#CC1F2933"
            Padding="12"
            Margin="8">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="✋"
                       FontSize="40"
                       Margin="0,0,12,0"
                       VerticalAlignment="Center"/>
            <StackPanel>
                <TextBlock Text="Hand raised"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="18"/>
                <TextBlock x:Name="DetailsText"
                           Foreground="White"
                           FontSize="13"
                           TextWrapping="Wrap"
                           MaxWidth="260"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
