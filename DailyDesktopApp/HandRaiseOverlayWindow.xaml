<Window x:Class="DailyDesktopApp.HandRaiseOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        Width="Auto"
        Height="Auto">

    <Border Background="#00385F"
            CornerRadius="8"
            Padding="14,10"
            SnapsToDevicePixels="True">
        <TextBlock x:Name="DetailsText"
                   Foreground="White"
                   FontSize="14"
                   FontWeight="SemiBold"
                   TextWrapping="Wrap"
                   VerticalAlignment="Center" />
    </Border>

</Window>
